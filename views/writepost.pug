doctype html
html(lang="en")
head
    meta(charset="UTF-8")
    title write a post
    link(rel="stylesheet", href="css/bootstrap.css")
    link(rel="stylesheet", href="css/form.css")
body
    .container
        .row
            h2.text-center Write a post
            form.col-md-4.col-md-offset-4(action='/writepost',method='post')
                .form-group
                    label(for='username') Title
                    input.form-control(type='text',name="title",required='',autocomplete='off')
                .form-group
                    label(for='bio') Description
                    textarea.form-control(name="description",required='')
                    label(for="visibility") Who can view
                    select.form-control(name="visibility")
                        option(value="public") Public
                        option(value="followers") Followers
                        option(value="private") Only Me
                button.btn.btn-success.full-width(type='submit') post
    