doctype html
html
  head
    title signin
    meta(name='viewport', content='width=device-width,initial-scale=1')
    link(rel='stylesheet', href='css/bootstrap.css')
    link(rel='stylesheet', href='css/form.css')
    script(src='https://use.fontawesome.com/239f4fd91e.js')
  body
  include flash.pug
    .container.mid
      .col-md-4.col-centered
        h2.h2.text-center Signin to wizards
        form(action='/signin' method='post')
          .form-group
            label(for='inputEmail') Email
            input#inputEmail.form-control(type='text', placeholder='Email', name='email',required='',autocomplete='off')
          .form-group
            label(for='inputPassword') Password
            input#inputPassword.form-control(type='password', placeholder='Password',name='password' required='')
          .form-group.text-center
            a(href='/signup') create an account
          button.btn.btn-primary.full-width(type='submit') Login
        br
        .row
          p.h5.text-center Or Signin using
          .col-md-6.col-md-offset-3.social
            a(href='http://google.com', title='signin with google')
              i.fa.fa-google(aria-hidden='true')
            a(href='http://facebook.com', title='signin with facebook')
              i.fa.fa-facebook-official(aria-hidden='true')
